<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp">

    <TextView
        android:id="@+id/search_result_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_large"
        android:text="@string/search_result_separator"/>

    <EditText
        android:id="@+id/search_result_current_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/search_result_separator"
        android:textSize="@dimen/text_large"
        android:inputType="number"
        android:text="1"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <TextView
        android:id="@+id/search_result_max_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/search_result_separator"
        android:textSize="@dimen/text_large"
        android:text="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <Button
        android:id="@+id/btn_search_result_move_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/search_result_current_page"
        android:textSize="@dimen/text_large"
        android:layout_marginRight="10dp"
        android:text="@string/search_result_before"/>

    <Button
        android:id="@+id/btn_search_result_move_after"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/search_result_max_page"
        android:textSize="@dimen/text_large"
        android:layout_marginLeft="10dp"
        android:text="@string/search_result_after"/>

</RelativeLayout>