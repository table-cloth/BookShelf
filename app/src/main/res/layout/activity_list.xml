<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    tools:context=".MyActivity">

    <!-- header -->

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <!-- ヘッダー（通常） -->

        <RelativeLayout
            android:id="@+id/header_area_mode_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--            <Button
                            android:id="@+id/btn_settings"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:background="@android:drawable/ic_menu_more"
                            android:visibility="visible" />
            -->
            <Button
                android:id="@+id/btn_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@android:drawable/ic_menu_search"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="所持作品一覧"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- ヘッダー（検索） -->

        <RelativeLayout
            android:id="@+id/header_area_mode_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_close" />

            <Spinner
                android:id="@+id/spinner_search_content"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/btn_dropdown"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <EditText
                android:id="@+id/search_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/spinner_search_content"
                android:layout_toRightOf="@id/btn_cancel"
                android:maxLines="1" />
        </RelativeLayout>

        <!-- ヘッダー（検索） -->

        <RelativeLayout
            android:id="@+id/header_area_mode_api_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_api_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_close" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:text="検索結果一覧"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- 追加ボタン -->

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="3dp"
        android:background="@drawable/btn_positive"
        android:text="作品を追加" />
    <!-- footer -->

    <RelativeLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_button"
        android:background="#44000000">

<!--        <include
            layout="@layout/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
-->
    </RelativeLayout>

    <!-- main view -->

    <com.tablecloth.bookshelf.util.CustomListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/banner"
        android:layout_below="@id/header"
        android:divider="#99444444"
        android:dividerHeight="1dp" />

</RelativeLayout>